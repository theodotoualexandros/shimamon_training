<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Deadline:</strong>
  <%= @task.deadline %>
</p>

<p>
  <strong>Status:</strong>
  <%= @task.status.name %>
</p>

<p>
  <strong>Priority:</strong>
  <%= @task.priority %>
</p>

<p>
  <strong>Labels:</strong>
  <%= @task.labels.map {|k| k.name}.join(', ') %>
</p>

<p>
  <strong>Users:</strong>
  <%= @task.users.map {|k| k.email}.join(', ') %>
</p>

